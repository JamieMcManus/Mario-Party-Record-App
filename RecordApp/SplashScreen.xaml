<Window x:Class="RecordApp.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordApp"
        mc:Ignorable="d"
        Title="SplashScreen" Height="390"  Width="535" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Loaded="Window_Loaded"
        AllowsTransparency="True" >
    <Window.Resources>

        <Style x:Key="MarioParty">
            <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Fonts/#New Super Mario Font (Mario Party 9)" >
            </Setter>

        </Style>
        
    </Window.Resources>
    <Grid>
        <ProgressBar x:Name="progressBar" Margin="131,271,131,100" />
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center" Margin="242,250,242,124">Loading...</TextBlock>
        <Image x:Name="imageBox" HorizontalAlignment="Left" Height="172" Margin="131,63,0,0" VerticalAlignment="Top" Width="273" Stretch="Fill"/>
        <TextBlock x:Name="txbTitle" Style="{StaticResource MarioParty}" HorizontalAlignment="Center" FontSize="20"  Margin="0,10,0,0" TextWrapping="Wrap" Text="Mario Party Records" VerticalAlignment="Top" Width="400" Height="48" />
    </Grid>
</Window>
    
